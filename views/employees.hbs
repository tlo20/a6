<div class="row">
<div class="col-md-12">
<h2>Employees<a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
<hr />
    {{#if employees}}
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Employee Num</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Manager ID</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Hired On</th>
                    <th></th>
                </tr>
            {{#each employees}}
                <tr>
                    <td>{{this.employeeNum}} </td>
                    <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                    <td><a href="mailto:{{this.email}}" >{{this.email}}</a></td>
                    <td>{{this.addressStreet}} </td>
                    <td><a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}</a></td>
                    <td><a href="/employees?status={{this.status}}">{{this.status}}</a></td>
                    <td><a href="/employees?department={{this.department}}">{{this.department}}</a> </td>
                    <td>{{this.hireDate}} </td>
                    <td><form action="/employees/delete/{{employeeNum}}"><input type="submit" class="btn btn-danger" value="Remove" /></form></td>
                </tr>
            {{/each}}
            </table>
        </div>
    {{else}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/if}}
</div>
</div>